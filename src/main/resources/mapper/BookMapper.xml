<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.re100io.mybatisdemo.mapper.BookMapper">

    <resultMap id="bookMap" type="com.re100io.mybatisdemo.model.Book">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="author" property="author" />
        <result column="publicationYear" property="publicationYear" />
        <result column="price" property="price" />
    </resultMap>

    <select id="getAllBooks" resultMap="bookMap">
        SELECT * FROM book
    </select>

    <select id="getBookById" parameterType="long" resultMap="bookMap">
        SELECT * FROM book WHERE id = #{id}
    </select>

    <insert id="insertBook" parameterType="com.re100io.mybatisdemo.model.Book">
        INSERT INTO book (title, author, publicationYear, price)
        VALUES (#{title}, #{author}, #{publicationYear}, #{price})
    </insert>

    <update id="updateBook" parameterType="com.re100io.mybatisdemo.model.Book">
        UPDATE book
        SET title = #{title}, author = #{author}, publicationYear = #{publicationYear}, price = #{price}
        WHERE id = #{id}
    </update>

    <delete id="deleteBook" parameterType="long">
        DELETE FROM book WHERE id = #{id}
    </delete>

    <select id="getBooksByPage" resultMap="bookMap">
        SELECT * FROM book LIMIT #{start}, #{pageSize}
    </select>

    <select id="getBookByName" resultType="com.re100io.mybatisdemo.model.Book">
        SELECT * FROM book limit 1;
    </select>

</mapper>